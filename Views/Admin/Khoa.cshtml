@model IEnumerable<BookStore.Model.Khoa>

@{
    ViewBag.Title = "Khoa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2>KHOA</h2>

<p>
    <a href="@Url.Action("Themmoikhoa","Admin")" class="btn btn-info" role="button">Thêm khoa</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên khoa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenKhoa)
        </td>
        <td>
           
            <a href="@Url.Action("Suakhoa", "Admin", new { id = item.MaKhoa })" class="btn btn-info" role="button" style="background-color:green; border:none"><i class="fa fa-edit"></i></a>
            
        </td>
    </tr>
}

</table>
