@model BookStore.Model.PhongTrao


@{
    ViewBag.Title = "ThemmoiPT";
    Layout = "~/Views/Shared/_LayoutSVDN.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center">PHONG TRÀO</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Tên Phong Trào</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ten_PT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ten_PT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Điểm phong trào</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diem_PT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Diem_PT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Up ảnh</h5>
            <div class="col-md-10">
            
                <div class="col-md-10">
                    <input type="file" name="fileUpload" />
                    @ViewBag.ThongBao
                </div>
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color:deepskyblue; color:white;width:200px" />
                <a href="@Url.Action("SinhVien", "Admin")" class="btn btn-info" role="button" style="width:200px">Trở về</a>
            </div>
        </div>
    </div>
}

