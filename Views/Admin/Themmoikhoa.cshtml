@model BookStore.Model.Khoa

@{
    ViewBag.Title = "Themmoikhoa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2 style="text-align:center;color:blue">Thêm Mới Khoa</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>KHOA</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h5>Mã khoa</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaKhoa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaKhoa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h5>Tên Khoa</h5>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenKhoa, "", new { @class = "text-danger" })
        </div>
    </div>

    

    <div class="form-group">
        <div>
            <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color:deepskyblue; color:white;width:200px" />
            <a href="@Url.Action("SinhVien", "Admin")" class="btn btn-info" role="button" style="width:200px">Trở về</a>
        </div>
    </div>
</div>
}


