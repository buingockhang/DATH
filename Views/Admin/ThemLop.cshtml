
@model BookStore.Model.Lop

@{
    ViewBag.Title = "ThemLop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2 style="text-align:center;color:blue">Thêm Lớp Mới</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Mã Lớp</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLop, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaLop, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h5>Tên Lớp</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLop, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLop, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <h5>Mã khoa</h5>
            <div class="col-md-10">
                <select class="form-control" name="MaKhoa">

                    @{
                        List<BookStore.Model.Khoa> DSKhoa = (List<BookStore.Model.Khoa>)ViewBag.DSKhoa;
                        foreach (var khoa in DSKhoa)
                        {
                            <option value="@khoa.MaKhoa">@khoa.TenKhoa</option>
                        }
                    }


                </select>
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color:deepskyblue; color:white;width:200px" />
                <a href="@Url.Action("SinhVien", "Admin")" class="btn btn-info" role="button" style="width:200px">Trở về</a>
            </div>
        </div>
    </div>
}


